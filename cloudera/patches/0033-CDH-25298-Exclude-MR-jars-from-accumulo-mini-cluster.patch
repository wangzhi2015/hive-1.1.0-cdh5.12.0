Subject: [PATCH 0033/1164] CDH-25298 - Exclude MR jars from accumulo
 mini-cluster when under MR1

---
 itests/qtest/pom.xml |   21 ++++++++++++++++-----
 itests/util/pom.xml  |   18 ++++++++++++++----
 2 files changed, 30 insertions(+), 9 deletions(-)

diff --git a/itests/qtest/pom.xml b/itests/qtest/pom.xml
index d318610..e9653f6 100644
--- a/itests/qtest/pom.xml
+++ b/itests/qtest/pom.xml
@@ -42,11 +42,6 @@
     <!-- dependencies are always listed in sorted order by groupId, artifectId -->
     <!-- test intra-project -->
     <dependency>
-      <groupId>org.apache.accumulo</groupId>
-      <artifactId>accumulo-minicluster</artifactId>
-      <scope>test</scope>
-    </dependency>
-    <dependency>
       <groupId>org.apache.hive</groupId>
       <artifactId>hive-ant</artifactId>
       <version>${project.version}</version>
@@ -128,6 +123,17 @@
       </properties>
       <dependencies>
         <dependency>
+          <groupId>org.apache.accumulo</groupId>
+          <artifactId>accumulo-minicluster</artifactId>
+          <scope>test</scope>
+          <exclusions>
+            <exclusion>
+              <groupId>org.apache.hadoop</groupId>
+              <artifactId>hadoop-minicluster</artifactId>
+            </exclusion>
+          </exclusions>
+        </dependency>
+        <dependency>
           <groupId>org.apache.hadoop</groupId>
           <artifactId>hadoop-common</artifactId>
           <version>${hadoop-23.version}</version>
@@ -226,6 +232,11 @@
           <scope>test</scope>
         </dependency>
         <dependency>
+          <groupId>org.apache.accumulo</groupId>
+          <artifactId>accumulo-minicluster</artifactId>
+          <scope>test</scope>
+        </dependency>
+        <dependency>
           <groupId>org.apache.hadoop</groupId>
           <artifactId>hadoop-mapreduce-client-jobclient</artifactId>
           <version>${hadoop-23.version}</version>
diff --git a/itests/util/pom.xml b/itests/util/pom.xml
index ce8bc7c..052b044 100644
--- a/itests/util/pom.xml
+++ b/itests/util/pom.xml
@@ -35,10 +35,6 @@
     <!-- dependencies are always listed in sorted order by groupId, artifectId -->
     <!-- test intra-project -->
     <dependency>
-      <groupId>org.apache.accumulo</groupId>
-      <artifactId>accumulo-minicluster</artifactId>
-    </dependency>
-    <dependency>
       <groupId>org.apache.hive</groupId>
       <artifactId>hive-accumulo-handler</artifactId>
       <version>${project.version}</version>
@@ -102,6 +98,16 @@
       </activation>
       <dependencies>
         <dependency>
+          <groupId>org.apache.accumulo</groupId>
+          <artifactId>accumulo-minicluster</artifactId>
+          <exclusions>
+            <exclusion>
+              <groupId>org.apache.hadoop</groupId>
+              <artifactId>hadoop-minicluster</artifactId>
+            </exclusion>
+          </exclusions>
+        </dependency>
+        <dependency>
           <groupId>org.apache.hadoop</groupId>
           <artifactId>hadoop-core</artifactId>
           <version>${hadoop-20S.version}</version>
@@ -138,6 +144,10 @@
       <id>hadoop-2</id>
       <dependencies>
         <dependency>
+          <groupId>org.apache.accumulo</groupId>
+          <artifactId>accumulo-minicluster</artifactId>
+        </dependency>
+        <dependency>
           <groupId>org.apache.hadoop</groupId>
           <artifactId>hadoop-common</artifactId>
           <version>${hadoop-23.version}</version>
